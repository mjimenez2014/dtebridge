%h3 Documentos

= will_paginate @documentos

%p.text-danger Busqueda por folio, debe indicar la Empresa.

= form_tag '/buscarDoc' do
  = field_set_tag do
    = label_tag :empresa, 'Empresa:'
    %input{name: 'empresa', type: 'text', list: 'Empresa'}
    %datalist#Empresa
      - @empresas.each do |empresa|
        %option= empresa.rznsocial
        
    = label_tag :sucursal, 'Sucursal:'
    %input{name: 'sucursal', type: 'text', list: 'Sucursal'}
    %datalist#Sucursal
      - @sucursales.each do |sucursal|
        %option= sucursal.nombre  
      
    = label_tag :Folio, 'Folio:'
    = text_field_tag :Folio
    = submit_tag 'Buscar'
%br

%table.table.table-striped
  %tr
    %th Tipodte
    %th Folio
    %th Fchemis
    %th.hidden_sm Cdgsiisucur
    %th.hidden_sm Mntneto
    %th Mnttotal
    %th EstadoEnvio
    %th Cedible
    %th Tributable
    %th XML Cliente
  - @documentos.each do |documento|
    %tr
      %td= documento.nombre_doc
      %td= documento.Folio
      %td= documento.FchEmis
      %td= documento.sucursal
      %td= documento.MntNeto
      %td= documento.MntTotal
      %td= documento.estado
      -if(documento.pdfs?)
        %td= link_to 'PDF', documento.pdfs_url
      -else
        %td
      -if(documento.pdft?)
        %td= link_to 'PDF', documento.pdft_url
      -else
        %td
      -if(documento.fileCliente?)
        %td= link_to 'XML', documento.fileCliente
      -else
        %td   

%br

